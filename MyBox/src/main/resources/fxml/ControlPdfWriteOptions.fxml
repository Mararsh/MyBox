<?import javafx.scene.shape.*?>
<?import javafx.scene.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.web.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.effect.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>

<VBox fx:id="thisPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.ControlPdfWriteOptions">
    <children>
        <VBox spacing="5.0" styleClass="focusBox" stylesheets="@../styles/MyBox.css" VBox.vgrow="NEVER">
            <children>
                <Label text="%PageSize" />
                <RadioButton fx:id="pixSizeRadio" mnemonicParsing="false" selected="true" text="%ImagesSize">
                    <toggleGroup>
                        <ToggleGroup fx:id="sizeGroup" />
                    </toggleGroup>
                </RadioButton>
                <RadioButton fx:id="standardSizeRadio" mnemonicParsing="false" text="%StandardSize" toggleGroup="$sizeGroup" />
                <ComboBox fx:id="standardSizeSelector" disable="true" maxWidth="1.7976931348623157E308" VBox.vgrow="NEVER" />
                <HBox fx:id="dpiBox" alignment="CENTER_LEFT" spacing="5.0">
                    <children>
                        <Label text="DPI" />
                        <ComboBox fx:id="dpiSelector" editable="true" prefWidth="160.0" />
                    </children>
                </HBox>
                <CheckBox fx:id="landscapeCheck" layoutX="10.0" layoutY="703.0" mnemonicParsing="false" selected="true" text="%Landscape" />
                <RadioButton fx:id="customSizeRadio" mnemonicParsing="false" text="%Custom" toggleGroup="$sizeGroup" />
                <HBox alignment="CENTER_LEFT" spacing="5.0">
                    <children>
                        <Label text="%Width" />
                        <TextField fx:id="customWidthInput" disable="true" prefWidth="140.0" promptText="%Width" />
                        <Label text="px">
                            <padding>
                                <Insets right="10.0" />
                            </padding>
                        </Label>
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="5.0">
                    <children>
                        <Label text="%Height" />
                        <TextField fx:id="customHeightInput" disable="true" prefWidth="140.0" promptText="%Height" />
                        <Label text="px">
                            <padding>
                                <Insets right="10.0" />
                            </padding>
                        </Label>
                    </children>
                </HBox>
            </children>
        </VBox>
        <VBox spacing="5.0" styleClass="focusBox" stylesheets="@../styles/MyBox.css" VBox.vgrow="NEVER">
            <children>
                <FlowPane hgap="5.0" vgap="5.0">
                    <children>
                        <Label text="%Margin" />
                        <ComboBox fx:id="marginSelector" editable="true" prefWidth="120.0" />
                        <Label text="px">
                            <padding>
                                <Insets right="10.0" />
                            </padding>
                        </Label>
                    </children>
                </FlowPane>
                <fx:include fx:id="ttf" source="ControlTTFSelector.fxml" />
                <HBox alignment="CENTER_LEFT" spacing="5.0">
                    <children>
                        <Label text="%FontSize" />
                        <ComboBox fx:id="fontSizeSelector" editable="true" prefWidth="140.0" promptText="%Size" />
                        <Label text="px">
                            <padding>
                                <Insets right="10.0" />
                            </padding>
                        </Label>
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" spacing="5.0">
                    <children>
                        <Label minWidth="-Infinity" text="%PageHeader" HBox.hgrow="NEVER" />
                        <TextField fx:id="headerInput" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" spacing="5.0">
                    <children>
                        <Label minWidth="-Infinity" text="%Author" />
                        <TextField fx:id="authorInput" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
                <CheckBox fx:id="pageNumberCheck" mnemonicParsing="false" selected="true" text="%PageNumber2" />
                <HBox alignment="CENTER_LEFT" spacing="5.0">
                    <children>
                        <Label text="%DefaultDisplayScale" />
                        <ComboBox fx:id="zoomSelector" editable="true" prefWidth="120.0" />
                        <Label text="\%">
                            <padding>
                                <Insets right="10.0" />
                            </padding>
                        </Label>
                    </children>
                </HBox>
            </children>
        </VBox>
        <VBox fx:id="imageOptionsBox" spacing="5.0" styleClass="focusBox" stylesheets="@../styles/MyBox.css">
            <children>
                <Label text="%ImageFormat" />
                <RadioButton mnemonicParsing="false" selected="true" text="%PNG">
                    <toggleGroup>
                        <ToggleGroup fx:id="imageFormatGroup" />
                    </toggleGroup>
                </RadioButton>
                <FlowPane hgap="5.0" vgap="5.0">
                    <children>
                        <RadioButton mnemonicParsing="false" text="%JpegQuailty" toggleGroup="$imageFormatGroup" />
                        <ComboBox fx:id="jpegQualitySelector" editable="true" prefWidth="120.0" />
                        <Label text="\%">
                            <padding>
                                <Insets right="10.0" />
                            </padding>
                        </Label>
                    </children>
                </FlowPane>
                <RadioButton mnemonicParsing="false" text="%CCITT4" toggleGroup="$imageFormatGroup" />
                <FlowPane hgap="5.0" vgap="5.0">
                    <children>
                        <TextField fx:id="thresholdInput" prefWidth="100.0" promptText="0~255" />
                        <Label text="%EmptyForDefault" />
                    </children>
                </FlowPane>
                <FlowPane hgap="5.0" vgap="5.0">
                    <children>
                        <CheckBox fx:id="ditherCheck" mnemonicParsing="false" text="%Dithering" />
                    </children>
                </FlowPane>
            </children>
        </VBox>
      <FlowPane hgap="5.0" vgap="5.0">
         <children>
                <Label text="%MaxMainMemPDF" />
                <RadioButton fx:id="pdfMem500MRadio" mnemonicParsing="false" onAction="#PdfMem500MB" selected="true" text="500M">
                    <toggleGroup>
                        <ToggleGroup fx:id="pdfMemGroup" />
                    </toggleGroup>
                </RadioButton>
                <RadioButton fx:id="pdfMem1GRadio" mnemonicParsing="false" onAction="#PdfMem1GB" text="1G" toggleGroup="$pdfMemGroup" />
                <RadioButton fx:id="pdfMem2GRadio" mnemonicParsing="false" onAction="#PdfMem2GB" text="2G" toggleGroup="$pdfMemGroup" />
                <RadioButton fx:id="pdfMemUnlimitRadio" mnemonicParsing="false" onAction="#pdfMemUnlimit" text="%Unlimit" toggleGroup="$pdfMemGroup" />
         </children>
      </FlowPane>
        <Label text="%PdfMemComments" />
    </children>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</VBox>
