<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="thisPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.ImageManufactureTransformController">
    <children>
      <VBox layoutX="10.0" layoutY="244.0" spacing="10.0" styleClass="focusBox" stylesheets="@../styles/MyBox.css">
         <children>
            <Label text="%Rotate" />
              <FlowPane hgap="5.0" prefWidth="200.0" vgap="5.0">
                  <children>
                      <Slider fx:id="angleSlider" blockIncrement="1.0" max="360.0" showTickLabels="true" showTickMarks="true" />
                      <Button fx:id="okButton" mnemonicParsing="false" onAction="#okAction">
                          <graphic>
                              <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                  <image>
                                      <Image url="@../buttons/Red/iconOK.png" />
                                  </image>
                              </ImageView>
                          </graphic>
                      </Button>
                  </children>
              </FlowPane>
              <FlowPane hgap="5.0" prefWidth="200.0" vgap="5.0">
                  <children>
                      <ComboBox fx:id="angleSelector" editable="true" prefWidth="100.0" />
                      <Button fx:id="rotateLeftButton" mnemonicParsing="false" onAction="#rotateLeft">
                          <graphic>
                              <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                  <image>
                                      <Image url="@../buttons/Red/iconRotateLeft.png" />
                                  </image>
                              </ImageView>
                          </graphic>
                      </Button>
                      <Button fx:id="rotateRightButton" mnemonicParsing="false" onAction="#rotateRight">
                          <graphic>
                              <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                  <image>
                                      <Image url="@../buttons/Red/iconRotateRight.png" />
                                  </image>
                              </ImageView>
                          </graphic>
                      </Button>
                  </children>
                  <VBox.margin>
                      <Insets />
                  </VBox.margin>
              </FlowPane>
         </children>
      </VBox>
      <VBox spacing="10.0" styleClass="focusBox" stylesheets="@../styles/MyBox.css">
         <children>
            <Label text="%Shear" />
              <FlowPane hgap="5.0" prefWidth="200.0" vgap="5.0">
               <children>
                  <Label text="%XRatio" />
                  <ComboBox editable="true" prefWidth="100.0" fx:id="xSelector" />
               </children>
              </FlowPane>
            <FlowPane hgap="5.0" layoutX="15.0" layoutY="78.0" prefWidth="200.0" vgap="5.0">
               <children>
                  <Label text="%YRatio" />
                  <ComboBox fx:id="ySelector" editable="true" prefWidth="100.0" />
               </children>
            </FlowPane>
                <Button fx:id="shearButton" mnemonicParsing="false" onAction="#shearAction">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../buttons/Red/iconShear.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
         </children>
      </VBox>
      <VBox layoutX="10.0" layoutY="140.0" spacing="10.0" styleClass="focusBox" stylesheets="@../styles/MyBox.css">
         <children>
              <FlowPane hgap="5.0" prefWidth="200.0" vgap="5.0">
                  <children>
                      <Label text="%Mirror" />
                      <Button fx:id="mirrorHButton" mnemonicParsing="false" onAction="#horizontalAction">
                          <graphic>
                              <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                  <image>
                                      <Image url="@../buttons/Red/iconHorizontal.png" />
                                  </image>
                              </ImageView>
                          </graphic>
                      </Button>
                      <Button fx:id="mirrorVButton" mnemonicParsing="false" onAction="#verticalAction">
                          <graphic>
                              <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                  <image>
                                      <Image url="@../buttons/Red/iconVertical.png" />
                                  </image>
                              </ImageView>
                          </graphic>
                      </Button>
                  </children>
              </FlowPane>
         </children>
      </VBox>
    </children>
</VBox>
