<BorderPane fx:id="thisPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.ImageManufactureBatchMarginsController">
    <top>
        <fx:include fx:id="mainMenu" source="MainMenu.fxml" />
    </top>
    <center>
        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
            <children>
                <TabPane fx:id="tabPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
                    <tabs>
                        <Tab fx:id="sourceTab" text="%SourceFiles">
                            <content>
                                <fx:include fx:id="table" source="ControlFilesTable.fxml" HBox.hgrow="ALWAYS" />
                            </content>
                        </Tab>
                        <Tab fx:id="optionsTab" text="%Options">
                            <content>
                                <VBox fx:id="optionsVBox" spacing="10.0">
                                    <children>
                                        <FlowPane hgap="5.0" layoutX="20.0" layoutY="20.0" prefWrapLength="0.0" vgap="5.0">
                                            <children>
                                                <RadioButton mnemonicParsing="false" selected="true" text="%AddMargins">
                                                    <toggleGroup>
                                                        <ToggleGroup fx:id="opGroup" />
                                                    </toggleGroup>
                                                </RadioButton>
                                                <RadioButton mnemonicParsing="false" text="%CutMarginsByColor" toggleGroup="$opGroup" />
                                                <RadioButton mnemonicParsing="false" text="%CutMarginsByWidth" toggleGroup="$opGroup" />
                                                <RadioButton fx:id="blurMarginsRadio" mnemonicParsing="false" text="%BlurMargins" toggleGroup="$opGroup" />
                                            </children>
                                        </FlowPane>
                                        <FlowPane hgap="5.0" layoutX="20.0" layoutY="20.0" prefWrapLength="0.0" vgap="5.0">
                                            <children>
                                                <Label text="%Margins" />
                                                <CheckBox fx:id="marginsTopCheck" mnemonicParsing="false" selected="true" text="%Top" />
                                                <CheckBox fx:id="marginsBottomCheck" mnemonicParsing="false" selected="true" text="%Bottom" />
                                                <CheckBox fx:id="marginsLeftCheck" mnemonicParsing="false" selected="true" text="%Left" />
                                                <CheckBox fx:id="marginsRightCheck" mnemonicParsing="false" selected="true" text="%Right" />
                                            </children>
                                        </FlowPane>
                                        <FlowPane fx:id="setPane" hgap="5.0" layoutX="20.0" layoutY="83.0" prefWrapLength="0.0" vgap="5.0">
                                            <children>
                                                <HBox fx:id="colorBox" alignment="CENTER_LEFT" spacing="5.0">
                                                    <children>
                                                        <fx:include fx:id="colorSet" source="ControlColorSet.fxml" />
                                                    </children>
                                                </HBox>
                                                <HBox fx:id="distanceBox" alignment="CENTER_LEFT" spacing="5.0">
                                                    <children>
                                                        <Label text="%ColorDistance" />
                                                        <TextField fx:id="distanceInput" prefWidth="50.0" />
                                                    </children>
                                                </HBox>
                                                <HBox fx:id="widthBox" alignment="CENTER_LEFT">
                                                    <children>
                                                        <Label text="%Width" />
                                                        <ComboBox fx:id="marginWidthBox" editable="true" prefWidth="80.0" />
                                                    </children>
                                                </HBox>
                                            </children>
                                        </FlowPane>
                                        <Button fx:id="previewButton" disable="true" mnemonicParsing="false" onAction="#previewAction" styleClass="halfBig" stylesheets="@../styles/MyBox.css">
                                            <graphic>
                                                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                    <image>
                                                        <Image url="@../buttons/Red/iconExamples.png" />
                                                    </image>
                                                </ImageView>
                                            </graphic>
                                        </Button>
                                    </children>
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </padding>
                                </VBox>
                            </content>
                        </Tab>
                        <Tab fx:id="targetTab" text="%TargetFiles">
                            <content>
                                <ScrollPane fitToHeight="true" fitToWidth="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" pannable="true" prefViewportHeight="929.0" prefViewportWidth="1869.0">
                                    <content>
                                        <VBox fx:id="targetVBox" spacing="5.0">
                                            <children>
                                                <fx:include fx:id="targetPath" source="ControlTargetPath.fxml" />
                                                <ScrollPane fitToHeight="true" fitToWidth="true" pannable="true" vbarPolicy="ALWAYS">
                                                    <content>
                                                        <fx:include fx:id="format" source="ControlImageFormat.fxml" /> 
                                                    </content>
                                                </ScrollPane>
                                                <Button fx:id="browseButton" mnemonicParsing="false" onAction="#browseAction">
                                                    <graphic>
                                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                            <image>
                                                                <Image url="@../buttons/Red/iconBrowse.png" />
                                                            </image>
                                                        </ImageView>
                                                    </graphic>
                                                </Button>
                                            </children>
                                            <padding>
                                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                            </padding>
                                        </VBox>
                                    </content>
                                </ScrollPane>
                            </content>
                        </Tab> 
                        <Tab fx:id="logsTab" text="%Logs">
                            <content>
                                <VBox fx:id="logsBox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="5.0">
                                    <children>
                                        <TextArea fx:id="logsTextArea" editable="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" wrapText="true" VBox.vgrow="ALWAYS" />
                                        <HBox alignment="CENTER_RIGHT" maxWidth="1.7976931348623157E308" spacing="10.0" VBox.vgrow="NEVER">
                                            <children>
                                                <Label text="%MaxCharacters" />
                                                <TextField fx:id="maxCharsinput" prefWidth="80.0" text="5000" />
                                                <CheckBox fx:id="verboseCheck" mnemonicParsing="false" text="%VerboseLogs" />
                                                <Button fx:id="clearButton1" mnemonicParsing="false" onAction="#clearLogs">
                                                    <graphic>
                                                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                            <image>
                                                                <Image url="@../buttons/Red/iconClear.png" />
                                                            </image>
                                                        </ImageView>
                                                    </graphic>
                                                </Button>
                                            </children>
                                        </HBox>
                                    </children>
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </padding>
                                </VBox>
                            </content>
                        </Tab>
                    </tabs>
                </TabPane>
                <fx:include fx:id="operationBar" source="Operation.fxml" />
            </children>
        </VBox>
    </center>
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
    </padding>
</BorderPane>
