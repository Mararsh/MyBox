<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="thisPane" spacing="5.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.ControlImageShear">
    <children>
      <ImageView fx:id="tipsView" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../buttons/Red/iconTips.png" />
         </image>
      </ImageView>
      <FlowPane alignment="CENTER_LEFT" hgap="5.0" prefWrapLength="0.0" vgap="5.0">
         <children>
            <Label text="%XRatio" />
            <ComboBox editable="true" prefWidth="100.0" fx:id="xSelector" />
         </children>
      </FlowPane>
      <FlowPane alignment="CENTER_LEFT" hgap="5.0" prefWrapLength="0.0" vgap="5.0">
         <children>
            <Label text="%YRatio" />
            <ComboBox fx:id="ySelector" editable="true" prefWidth="100.0" />
         </children>
      </FlowPane>
      <CheckBox fx:id="cutCheck" mnemonicParsing="false" text="%CutMargins" />
    </children>
</VBox>
