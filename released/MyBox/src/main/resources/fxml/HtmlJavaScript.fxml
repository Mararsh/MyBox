<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="thisPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="2.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.HtmlJavaScriptController">
    <children>
          <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" spacing="2.0" VBox.vgrow="NEVER">
              <children>
                  <Button fx:id="helpButton" mnemonicParsing="false" onAction="#showJavascriptHelps" onMouseEntered="#popJavascriptHelps">
                      <graphic>
                          <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                              <image>
                                  <Image url="@../buttons/iconClaw.png" />
                              </image>
                          </ImageView>
                      </graphic>
                  </Button>
                  <Button fx:id="selectButton" mnemonicParsing="false" onAction="#selectAction">
                      <graphic>
                          <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                              <image>
                                  <Image url="@../buttons/Red/iconSelect.png" />
                              </image>
                          </ImageView>
                      </graphic>
                  </Button>
                  <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveAction">
                      <graphic>
                          <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                              <image>
                                  <Image url="@../buttons/Red/iconSave.png" />
                              </image>
                          </ImageView>
                      </graphic>
                  </Button>
                  <FlowPane alignment="CENTER_RIGHT" hgap="2.0" maxWidth="1.7976931348623157E308" vgap="2.0" HBox.hgrow="ALWAYS" />
              </children>
          </HBox>
          <HBox alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" spacing="2.0">
              <children>
                  <CheckBox fx:id="wrapCheck" mnemonicParsing="false">
                      <graphic>
                          <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                              <image>
                                  <Image url="@../buttons/Red/iconWrap.png" />
                              </image>
                          </ImageView>
                      </graphic>
                  </CheckBox>
                  <Label maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
                  <Button fx:id="examplesButton" mnemonicParsing="false" onAction="#showExamplesMenu" onMouseEntered="#popExamplesMenu">
                      <graphic>
                          <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                              <image>
                                  <Image url="@../buttons/Red/iconExamples.png" />
                              </image>
                          </ImageView>
                      </graphic>
                  </Button>
                  <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clearAction">
                      <graphic>
                          <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                              <image>
                                  <Image url="@../buttons/Red/iconClear.png" />
                              </image>
                          </ImageView>
                      </graphic>
                  </Button>
                  <Button fx:id="historyButton" mnemonicParsing="false" onAction="#showHistories" onMouseEntered="#popHistories">
                      <graphic>
                          <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                              <image>
                                  <Image url="@../buttons/Red/iconHistory.png" />
                              </image>
                          </ImageView>
                      </graphic>
                  </Button>
              </children>
          </HBox>
          <TextArea fx:id="scriptInput" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS" />
          <HBox alignment="CENTER_RIGHT" spacing="2.0">
              <children>
            <CheckBox fx:id="onTopCheck" mnemonicParsing="false" selected="true">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../buttons/Red/iconTop.png" />
                     </image>
                  </ImageView>
               </graphic>
            </CheckBox>
            <CheckBox fx:id="closeAfterCheck" mnemonicParsing="false" selected="true">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../buttons/Red/iconClose.png" />
                     </image>
                  </ImageView>
               </graphic>
            </CheckBox>
                  <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelAction">
                      <graphic>
                          <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                              <image>
                                  <Image url="@../buttons/Red/iconCancel.png" />
                              </image>
                          </ImageView>
                      </graphic>
                  </Button>
                  <Button fx:id="startButton" mnemonicParsing="false" onAction="#startAction">
                      <graphic>
                          <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                              <image>
                                  <Image url="@../buttons/Red/iconStart.png" />
                              </image>
                          </ImageView>
                      </graphic>
                  </Button>
              </children>
          </HBox>
    </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
