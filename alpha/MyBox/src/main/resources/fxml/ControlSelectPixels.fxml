<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="thisPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="2.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.ControlSelectPixels">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="2.0">
            <children>
            <Button fx:id="saveScopeButton" mnemonicParsing="false" onAction="#saveScope">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../buttons/Red/iconSave.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="selectButton" mnemonicParsing="false" onAction="#selectAction">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../buttons/Red/iconSelect.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            </children>
        </HBox>
      <fx:include fx:id="handle" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" source="ControlImageScope.fxml" VBox.vgrow="ALWAYS" />
    </children>
</VBox>
