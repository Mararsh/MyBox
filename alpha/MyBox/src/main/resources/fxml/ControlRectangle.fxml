<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="thisPane" spacing="2.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.ControlRectangle">
    <children>
      <Label minHeight="-Infinity" text="%LeftTop" wrapText="true" />
      <FlowPane hgap="2.0" minHeight="-Infinity" prefWrapLength="100.0" vgap="2.0">
         <children>
            <Label text="x">
               <FlowPane.margin>
                  <Insets />
               </FlowPane.margin>
            </Label>
            <TextField fx:id="rectXInput" prefWidth="100.0" />
         </children>
      </FlowPane>
      <FlowPane hgap="2.0" minHeight="-Infinity" prefWrapLength="100.0" vgap="2.0">
         <children>
            <Label text="y" />
            <TextField fx:id="rectYInput" prefWidth="100.0" />
         </children>
      </FlowPane>
      <FlowPane hgap="2.0" minHeight="-Infinity" prefWrapLength="100.0" vgap="2.0">
         <children>
            <Label minHeight="-Infinity" text="%Width">
               <FlowPane.margin>
                  <Insets />
               </FlowPane.margin>
            </Label>
            <TextField fx:id="rectWidthInput" prefWidth="100.0" />
         </children>
      </FlowPane>
      <FlowPane hgap="2.0" minHeight="-Infinity" prefWrapLength="100.0" vgap="2.0">
         <children>
            <Label minHeight="-Infinity" text="%Height" wrapText="true" />
            <TextField fx:id="rectHeightInput" prefWidth="100.0" />
         </children>
      </FlowPane>
      <FlowPane fx:id="rectArcPane" hgap="2.0" prefWrapLength="100.0" vgap="2.0">
         <children>
            <Label minHeight="-Infinity" text="%Arc" wrapText="true" />
            <ComboBox fx:id="roundSizeSelector" editable="true" prefWidth="90.0" />
         </children>
      </FlowPane>
    </children>
</VBox>
