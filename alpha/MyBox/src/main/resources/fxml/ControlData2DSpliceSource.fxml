<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="thisPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="2.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.ControlData2DSpliceSource">
    <children>
      <HBox alignment="CENTER_LEFT" spacing="2.0">
         <children>
            <ImageView fx:id="tipsView" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../buttons/Red/iconTips.png" />
               </image>
            </ImageView>
            <Label fx:id="titleLabel" maxWidth="1.7976931348623157E308" minHeight="-Infinity" wrapText="true" HBox.hgrow="ALWAYS" />
            <Button fx:id="editDataButton" mnemonicParsing="false" onAction="#editAction">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../buttons/Red/iconEdit.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </HBox>
      <FlowPane fx:id="buttonsPane" alignment="CENTER_RIGHT" hgap="2.0" vgap="2.0">
         <children>
            <Button fx:id="noColumnButton" layoutX="169.0" layoutY="10.0" mnemonicParsing="false" onAction="#noColumn" text="%NoColumn" />
            <Button fx:id="allColumnButton" mnemonicParsing="false" onAction="#allColumns" text="%AllColumns" />
            <CheckBox fx:id="allPagesCheck" minHeight="-Infinity" mnemonicParsing="false" text="%AllDataRows" wrapText="true" />
         </children>
      </FlowPane>
        <TableView fx:id="tableView" editable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
            <columns> 
                <TableColumn fx:id="rowsSelectionColumn" maxWidth="1.7976931348623157E308" prefWidth="-1.0">
                    <graphic>
                        <CheckBox fx:id="allRowsCheck" mnemonicParsing="false" text="%TableRow" />
                    </graphic>
                </TableColumn>
                <TableColumn fx:id="dataRowColumn" editable="false" maxWidth="1.7976931348623157E308" prefWidth="-1.0" text="%DataRow" />
            </columns>
        </TableView>
        <FlowPane fx:id="paginationPane" alignment="CENTER_RIGHT" hgap="2.0" vgap="2.0">
            <children>
                <Label fx:id="selectedLabel" minHeight="-Infinity" wrapText="true">
                    <FlowPane.margin>
                        <Insets right="20.0" />
                    </FlowPane.margin>
                </Label>
                <Label fx:id="dataSizeLabel" minHeight="-Infinity" wrapText="true">
                    <FlowPane.margin>
                        <Insets right="20.0" />
                    </FlowPane.margin>
                </Label>
                <Label text="%PageSize" />
                <ComboBox fx:id="pageSizeSelector" editable="true" prefWidth="80.0" />
                <Label text="%Page" />
                <ComboBox fx:id="pageSelector" editable="true" prefWidth="80.0" />
                <Label fx:id="pageLabel" />
                <Button fx:id="goPageButton" mnemonicParsing="false" onAction="#goPage">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../buttons/Red/iconGo.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="pageFirstButton" mnemonicParsing="false" onAction="#pageFirstAction">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../buttons/Red/iconFirst.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="pageLastButton" mnemonicParsing="false" onAction="#pageLastAction">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../buttons/Red/iconLast.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="pagePreviousButton" mnemonicParsing="false" onAction="#pagePreviousAction">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../buttons/Red/iconPrevious.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="pageNextButton" mnemonicParsing="false" onAction="#pageNextAction">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../buttons/Red/iconNext.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </FlowPane>
    </children>
</VBox>
