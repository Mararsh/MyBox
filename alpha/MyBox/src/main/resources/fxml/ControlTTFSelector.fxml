<HBox fx:id="thisPane" alignment="CENTER_LEFT" maxWidth="1.7976931348623157E308" nodeOrientation="LEFT_TO_RIGHT" spacing="5.0"
      xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.ControlTTFSelector">
    <children>
        <Label fx:id="label" minWidth="-Infinity" text="%FontFile" HBox.hgrow="NEVER" />
        <ComboBox fx:id="ttfSelector" editable="true" maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
        <Button fx:id="selectFileButton" mnemonicParsing="false" onAction="#pickSourceFile" onMouseEntered="#popSourceFile" HBox.hgrow="NEVER">
            <graphic>
                <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../buttons/Red/iconSelectFile.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </children>
</HBox>
