<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="thisPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="2.0"
      xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.ControlImageRulerOptions">
    <children>
        <FlowPane hgap="2.0" vgap="2.0" styleClass="focusBox" stylesheets="@../styles/MyBox.css">
            <children>
                <Label text="%StrokeColor" />
                <fx:include fx:id="strokeColorSet" source="ControlColorSet.fxml" />
                <Label text="%Width" />
                <ComboBox fx:id="strokeWidthSelector" editable="true" prefWidth="100.0" />
            </children>
        </FlowPane>
        <FlowPane hgap="2.0" vgap="2.0" styleClass="focusBox" stylesheets="@../styles/MyBox.css">
            <children>
                <Label text="%AnchorColor" />
                <fx:include fx:id="anchorColorSet" source="ControlColorSet.fxml" />
                <Label text="%Width" />
                <ComboBox fx:id="anchorWidthSelector" editable="true" prefWidth="100.0" />
            </children>
        </FlowPane>
        <FlowPane hgap="2.0" vgap="2.0" styleClass="focusBox" stylesheets="@../styles/MyBox.css">
            <children>
                <Label text="%GridLines" />
                <Label text="%Color" />
                <fx:include fx:id="gridColorSet" source="ControlColorSet.fxml" />
                <Label text="%Width" />
                <ComboBox fx:id="gridWidthSelector" editable="true" prefWidth="100.0" />
                <Label text="%Interval" />
                <ComboBox fx:id="gridIntervalSelector" editable="true" prefWidth="100.0" />
                <Label layoutX="302.0" layoutY="17.0" text="%Opacity" />
                <ComboBox fx:id="gridOpacitySelector" editable="true" layoutX="348.0" layoutY="13.0" prefWidth="100.0" />
            </children>
        </FlowPane>
    </children>
</VBox>
