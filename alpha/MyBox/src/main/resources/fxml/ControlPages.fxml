<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="thisPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" nodeOrientation="LEFT_TO_RIGHT" spacing="2.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.ControlPages">
    <children>
                <FlowPane fx:id="flowPane" alignment="CENTER_LEFT" hgap="2.0" maxWidth="1.7976931348623157E308" nodeOrientation="LEFT_TO_RIGHT" prefWrapLength="0.0" vgap="2.0">
                    <children>
            <Button fx:id="pagesButton" mnemonicParsing="false" onAction="#showPagesMemu" onMouseEntered="#popPagesMemu">
               <graphic>
                  <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../buttons/Red/iconPages.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
                        <Label fx:id="pageLabel" text="page" />
                        <Label fx:id="sizeLabel" minHeight="-Infinity" text="size" wrapText="true">
                            <FlowPane.margin>
                                <Insets right="20.0" />
                            </FlowPane.margin>
                        </Label>
                        <Label fx:id="selectedLabel" minHeight="-Infinity" text="select" wrapText="true">
                            <FlowPane.margin>
                                <Insets right="20.0" />
                            </FlowPane.margin>
                        </Label>
                    </children>
                </FlowPane>

    </children>
</VBox>
