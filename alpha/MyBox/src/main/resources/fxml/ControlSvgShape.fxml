                                                                                <Insets />
                                                                            </FlowPane.margin>
                                                                            <padding>
                                                                                <Insets left="10.0" />
                                                                            </padding>
                                                                        </Label>
                                                                        <TextField fx:id="dashInput" prefWidth="160.0" />
                                                                    </children>
                                                                </FlowPane>
                                                                <FlowPane fx:id="fillPane1" hgap="2.0" prefWrapLength="0.0" vgap="2.0">
                                                                    <children>
                                                                        <CheckBox fx:id="fillCheck" mnemonicParsing="false" text="%Fill" />
                                                                        <fx:include fx:id="fillColor" source="ControlColorSet.fxml" />
                                                                        <Label minHeight="-Infinity" text="%FillOpacity" wrapText="true" />
                                                                        <ComboBox fx:id="fillOpacitySelector" editable="true" prefWidth="120.0" />
                                                                    </children>
                                                                </FlowPane>
                                                                <FlowPane hgap="2.0" prefWrapLength="0.0" vgap="2.0">
                                                                    <children>
                                                                        <Label text="%AnchorColor" />
                                                                        <fx:include fx:id="anchorColor" source="ControlColorSet.fxml" />
                                                                        <Label text="%AnchorSize" />
                                                                        <ComboBox fx:id="anchorSizeSelector" editable="true" prefWidth="100.0" />
                                                                    </children>
                                                                </FlowPane>
                                                                <HBox alignment="CENTER_LEFT" spacing="2.0">
                                                                    <children>
                                                                        <Label maxWidth="1.7976931348623157E308" text="%Style" HBox.hgrow="ALWAYS" />
