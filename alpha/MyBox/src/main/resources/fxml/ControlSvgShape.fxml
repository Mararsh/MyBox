                                                                    </children>
                                                                </FlowPane>
                                                                <FlowPane hgap="2.0" prefWrapLength="0.0" vgap="2.0">
                                                                    <children>
                                                                        <CheckBox fx:id="dashCheck" mnemonicParsing="false" text="%Dotted" />
