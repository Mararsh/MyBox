                                                            <image>
                                                                <Image url="@../buttons/Red/iconSVG.png" />
                                                            </image>
                                                        </ImageView>
                                                    </graphic>
                                                </RadioButton>
                                            </children>
                                        </FlowPane>
                                    </children>
                                </HBox>
                                <TabPane fx:id="tabPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
                                    <tabs>
                                        <Tab fx:id="shapeTab" text="%Shape">
                                            <content>
                                                <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="2.0" styleClass="focusBox" stylesheets="@../styles/MyBox.css">
                                                    <children>
                                                        <fx:include fx:id="parameters" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" source="ControlShapeParameters.fxml" VBox.vgrow="ALWAYS" />
                                                    </children>
                                                    <padding>
                                                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                                                    </padding>
                                                </VBox>
                                            </content>
                                        </Tab>
                                        <Tab fx:id="styleTab" text="%Style">
                                            <content>
                                                <ScrollPane fitToHeight="true" fitToWidth="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" pannable="true">
                                                    <content>
                                                        <VBox fx:id="styleBox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="2.0" styleClass="focusBox" stylesheets="@../styles/MyBox.css">
