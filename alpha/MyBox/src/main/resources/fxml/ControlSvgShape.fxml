<VBox fx:id="thisPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="2.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.ControlSvgShape">
    <children>
        <SplitPane fx:id="splitPane" dividerPositions="0.5" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
            <items>
                <ScrollPane fx:id="leftPane" fitToHeight="true" fitToWidth="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" pannable="true">
                    <content>
                        <VBox fx:id="optionsBox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="2.0">
                            <padding>
                                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                            </padding>
                            <children>
                                <HBox spacing="2.0">
                                    <children>
                                        <Button fx:id="helpButton" mnemonicParsing="false" onAction="#showHelps" onMouseEntered="#popHelps">
                                            <graphic>
                                                <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                                                    <image>
                                                        <Image url="@../buttons/iconClaw.png" />
                                                    </image>
                                                </ImageView>
                                            </graphic>
                                        </Button>
                                        <FlowPane fx:id="typePane" alignment="CENTER_LEFT" hgap="2.0" maxWidth="1.7976931348623157E308" prefWrapLength="200.0" vgap="2.0" HBox.hgrow="ALWAYS">
                                            <children>
                                                <RadioButton fx:id="lineRadio" mnemonicParsing="false" selected="true">
                                                    <graphic>
                                                        <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                                            <image>
                                                                <Image url="@../buttons/Red/iconLine.png" />
                                                            </image>
                                                        </ImageView>
                                                    </graphic>
                                                    <toggleGroup>
                                                        <ToggleGroup fx:id="typeGroup" />
                                                    </toggleGroup>
                                                </RadioButton>
                                                <RadioButton fx:id="polylineRadio" mnemonicParsing="false" toggleGroup="$typeGroup">
                                                    <graphic>
                                                        <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                                                            <image>
                                                                <Image url="@../buttons/Red/iconPolyline.png" />
                                                            </image>
                                                        </ImageView>
                                                    </graphic>
                                                </RadioButton>
                                                <RadioButton fx:id="polygonRadio" mnemonicParsing="false" toggleGroup="$typeGroup">
