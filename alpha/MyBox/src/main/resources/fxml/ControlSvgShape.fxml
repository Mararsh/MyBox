                                                                        <ComboBox fx:id="strokeWidthSelector" editable="true" prefWidth="120.0" />
                                                                    </children>
                                                                </FlowPane>
                                                                <FlowPane hgap="2.0" prefWrapLength="0.0" vgap="2.0">
                                                                    <children>
