<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="thisPane" prefHeight="500.0" prefWidth="700.0" spacing="2.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.Data2DPageHtml">
    <children>
      <Label fx:id="nameLabel" minHeight="-Infinity" wrapText="true" />
        <FlowPane fx:id="buttonsPane" alignment="CENTER_RIGHT" hgap="2.0" vgap="2.0">
            <children>
                <CheckBox fx:id="formCheck" layoutX="377.0" layoutY="16.0" mnemonicParsing="false" text="%Form" />
                <CheckBox fx:id="titleCheck" mnemonicParsing="false" text="%Title" />
                <CheckBox fx:id="columnCheck" mnemonicParsing="false" text="%ColumnName" />
                <CheckBox fx:id="rowCheck" mnemonicParsing="false" text="%RowNumber" />
                <Button fx:id="menuButton" mnemonicParsing="false" onAction="#menuAction">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../buttons/Red/iconMenu.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="popButton" mnemonicParsing="false" onAction="#popAction">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../buttons/Red/iconPop.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="editButton" mnemonicParsing="false" onAction="#editAction">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../buttons/Red/iconEdit.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#refreshAction">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../buttons/Red/iconRefresh.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            </children>
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </FlowPane>
              <fx:include fx:id="html" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" source="ControlWebView.fxml" VBox.vgrow="ALWAYS" />
      <HBox alignment="CENTER_RIGHT" spacing="2.0">
         <children>
            <CheckBox fx:id="onTopCheck" mnemonicParsing="false" selected="true">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../buttons/Red/iconTop.png" />
                     </image>
                  </ImageView>
               </graphic>
            </CheckBox>
            <CheckBox fx:id="closeAfterCheck" mnemonicParsing="false" selected="true">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../buttons/Red/iconClose.png" />
                     </image>
                  </ImageView>
               </graphic>
            </CheckBox>
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelAction">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../buttons/Red/iconCancel.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="okButton" mnemonicParsing="false" onAction="#okAction">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../buttons/Red/iconOK.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </HBox>
    </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
