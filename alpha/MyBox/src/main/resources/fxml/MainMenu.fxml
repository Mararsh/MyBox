<?import javafx.scene.shape.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="thisPane" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.MainMenuController">
    <children>
        <HBox fx:id="mainMenuPane" alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity">
            <children>
                <MenuBar fx:id="menuBar" HBox.hgrow="ALWAYS">
                    <menus>
                        <Menu fx:id="homeMenu" mnemonicParsing="false" text="%Window">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#showHome" text="%MainPageShortcut" />
                                <MenuItem mnemonicParsing="false" onAction="#WindowsList" text="%WindowsList" />
                                <SeparatorMenuItem mnemonicParsing="false" />
                                <MenuItem mnemonicParsing="false" onAction="#SnapshotWindow" text="%SnapshotWindowComments" />
                                <MenuItem mnemonicParsing="false" onAction="#SnapshotPane" text="%SnapshotPane" />
                                <SeparatorMenuItem mnemonicParsing="false" />
                                <MenuItem mnemonicParsing="false" onAction="#refreshInterfaceAndFile" text="%RefreshWindow" />
                                <MenuItem mnemonicParsing="false" onAction="#reload" text="%Reload" />
                                <MenuItem mnemonicParsing="false" onAction="#fullScreen" text="%FullScreen" />
                                <MenuItem mnemonicParsing="false" onAction="#resetWindows" text="%ResetWindows" />
                                <CheckMenuItem fx:id="alwayOnTopCheck" mnemonicParsing="false" onAction="#AlwayOnTop" text="%AlwayOnTopComments" />
                                <SeparatorMenuItem mnemonicParsing="false" />
                                <MenuItem mnemonicParsing="false" onAction="#closeWindow" text="%CloseWindow" />
                                <MenuItem fx:id="closeOtherMenu" mnemonicParsing="false" onAction="#closeOtherWindows" text="%CloseOtherWindows" />
                                <SeparatorMenuItem mnemonicParsing="false" />
                                <MenuItem mnemonicParsing="false" onAction="#restart" text="%Restart" />
                                <SeparatorMenuItem mnemonicParsing="false" />
                                <MenuItem mnemonicParsing="false" onAction="#exit" text="%Exit" />
                            </items>
                        </Menu>
                        <Menu fx:id="toolsMenu" mnemonicParsing="false" text="%Tools">
                            <items>
                                <SeparatorMenuItem mnemonicParsing="false" />
                            </items>
                        </Menu>
                        <Menu fx:id="settingsMenu" mnemonicParsing="false" text="%Settings">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#settingsAction" text="%SettingsDot" />
                                <SeparatorMenuItem mnemonicParsing="false" />

                                <CheckMenuItem fx:id="shortcutsCanNotOmitCheck" mnemonicParsing="false" onAction="#shortcutsCanNotOmitCtrlAlt" text="%ShortcutsCanNotOmitCtrlAlt" />
                                <CheckMenuItem fx:id="loseFocusCommitDataCheck" mnemonicParsing="false" onAction="#loseFocusCommitData" text="%CommitModificationWhenDataCellLoseFocus" />
                                <CheckMenuItem fx:id="clearExpiredDataCheck" mnemonicParsing="false" onAction="#clearExpiredDataBeforeExit" text="%ClearExpiredDataBeforeExit" />
                                <CheckMenuItem fx:id="popRecentCheck" mnemonicParsing="false" onAction="#popRecentAction" text="%PopRecentFiles" />
                                <CheckMenuItem fx:id="closeCurrentCheck" mnemonicParsing="false" onAction="#closeCurrentAction" text="%CloseCurrentWhenOpenTool" />
                                <CheckMenuItem fx:id="branchIconifyCheck" mnemonicParsing="false" onAction="#branchIconifyParent" text="%OperationWindowIconifyParent" />
                                <CheckMenuItem fx:id="recordWindowsSizeLocationCheck" mnemonicParsing="false" onAction="#RecordWindowsSizeLocationAction" text="%RecordWindowsSizeLocation" />
                                <SeparatorMenuItem mnemonicParsing="false" />

                                <Menu fx:id="languagesMenu" mnemonicParsing="false" text="%Languages">
                                    <items>
                                        <RadioMenuItem fx:id="chineseMenuItem" mnemonicParsing="false" onAction="#setChinese" text="中文">
                                            <toggleGroup>
                                                <ToggleGroup fx:id="langGroup" />
                                            </toggleGroup>
                                        </RadioMenuItem>
                                        <RadioMenuItem fx:id="englishMenuItem" mnemonicParsing="false" onAction="#setEnglish" text="English" toggleGroup="$langGroup" />

                                    </items>
                                </Menu>

                                <Menu  mnemonicParsing="false" text="%Interface">
                                    <items>
                                        <RadioMenuItem fx:id="font12MenuItem" mnemonicParsing="false" onAction="#setFont12" style="-fx-font-size: 12px;" text="%FontSize12">
                                            <toggleGroup>
                                                <ToggleGroup fx:id="fontSizeGroup" />
                                            </toggleGroup>
                                        </RadioMenuItem>
                                        <RadioMenuItem fx:id="font15MenuItem" mnemonicParsing="false" onAction="#setFont15" style="-fx-font-size: 15px;" text="%FontSize15" toggleGroup="$fontSizeGroup" />
                                        <RadioMenuItem fx:id="font17MenuItem" mnemonicParsing="false" onAction="#setFont17" style="-fx-font-size: 17px;" text="%FontSize17" toggleGroup="$fontSizeGroup" />

                                        <SeparatorMenuItem mnemonicParsing="false" />

                                        <RadioMenuItem fx:id="smallIconMenuItem" mnemonicParsing="false" onAction="#smallIcon" text="%SmallSizeIcon">
                                            <toggleGroup>
                                                <ToggleGroup fx:id="iconGroup" />
                                            </toggleGroup>
                                            <graphic>
                                                <ImageView fx:id="smallIconView" fitHeight="15.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
                                                    <image>
                                                        <Image url="@../buttons/Red/iconExamples.png" />
                                                    </image>
                                                </ImageView>
                                            </graphic>
                                        </RadioMenuItem>
                                        <RadioMenuItem fx:id="normalIconMenuItem" mnemonicParsing="false" onAction="#normalIcon" text="%NormalSizeIcon"  toggleGroup="$iconGroup">
                                            <graphic>
                                                <ImageView fx:id="normalIconView" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                                    <image>
                                                        <Image url="@../buttons/Red/iconExamples.png" />
                                                    </image>
                                                </ImageView>
                                            </graphic>
                                        </RadioMenuItem>
                                        <RadioMenuItem fx:id="bigIconMenuItem" mnemonicParsing="false" onAction="#bigIcon" text="%BigSizeIcon" toggleGroup="$iconGroup">
                                            <graphic>
                                                <ImageView fx:id="bigIconView" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                                    <image>
                                                        <Image url="@../buttons/Red/iconExamples.png" />
                                                    </image>
                                                </ImageView>
                                            </graphic>
                                        </RadioMenuItem>

                                        <SeparatorMenuItem mnemonicParsing="false" />

                                        <RadioMenuItem fx:id="redMenuItem" mnemonicParsing="false" onAction="#setRed" text="%MyBoxColorRedDark">
                                            <toggleGroup>
                                                <ToggleGroup fx:id="colorGroup" />
                                            </toggleGroup>
                                            <graphic>
                                                <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#C32136" height="20.0" stroke="BLACK" strokeType="INSIDE" width="20.0" />
                                            </graphic>
                                        </RadioMenuItem>
                                        <RadioMenuItem fx:id="pinkMenuItem" mnemonicParsing="false" onAction="#setPink" text="%MyBoxColorPinkDark" toggleGroup="$colorGroup">
                                            <graphic>
                                                <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#9E004F" height="20.0" stroke="BLACK" strokeType="INSIDE" width="20.0" />
                                            </graphic>
                                        </RadioMenuItem>
                                        <RadioMenuItem fx:id="lightBlueMenuItem" mnemonicParsing="false" onAction="#setLightBlue" text="%MyBoxColorLightBlueDark" toggleGroup="$colorGroup">
                                            <graphic>
                                                <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#4C8DAE" height="20.0" stroke="BLACK" strokeType="INSIDE" width="20.0" />
                                            </graphic>
                                        </RadioMenuItem>
                                        <RadioMenuItem fx:id="blueMenuItem" mnemonicParsing="false" onAction="#setBlue" text="%MyBoxColorBlueDark" toggleGroup="$colorGroup">
                                            <graphic>
                                                <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#003472" height="20.0" stroke="BLACK" strokeType="INSIDE" width="20.0" />
                                            </graphic>
                                        </RadioMenuItem>
                                        <RadioMenuItem fx:id="orangeMenuItem" mnemonicParsing="false" onAction="#setOrange" text="%MyBoxColorOrangeDark" toggleGroup="$colorGroup">
                                            <graphic>
                                                <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#622A1D" height="20.0" stroke="BLACK" strokeType="INSIDE" width="20.0" />
                                            </graphic>
                                        </RadioMenuItem>
                                        <RadioMenuItem fx:id="greenMenuItem" mnemonicParsing="false" onAction="#setGeen" text="%MyBoxColorGreenDark" toggleGroup="$colorGroup">
                                            <graphic>
                                                <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#0D3928" height="20.0" stroke="BLACK" strokeType="INSIDE" width="20.0" />
                                            </graphic>
                                        </RadioMenuItem>
                                        <RadioMenuItem fx:id="colorCustomizeMenuItem" mnemonicParsing="false" onAction="#setColorCustomize" text="%Customize" toggleGroup="$colorGroup">
                                            <graphic>
                                                <Rectangle fx:id="colorCustomizeRect" arcHeight="5.0" arcWidth="5.0" fill="#DDDDDD" height="20.0" stroke="BLACK" strokeType="INSIDE" width="20.0" />
                                            </graphic>
                                        </RadioMenuItem>
                                        <MenuItem mnemonicParsing="false" onAction="#inputColors" text="%CustomizeColors">
                                            <graphic>
                                                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                                    <image>
                                                        <Image url="@../buttons/Red/iconInput.png" />
                                                    </image>
                                                </ImageView>
                                            </graphic>
                                        </MenuItem>

                                        <SeparatorMenuItem mnemonicParsing="false" />
                                        <CheckMenuItem fx:id="controlTextCheck" mnemonicParsing="false" onAction="#setControlDisplayText" text="%DisplayControlText" />

                                    </items>
                                </Menu>

                                <SeparatorMenuItem mnemonicParsing="false" />
                                <MenuItem mnemonicParsing="false" onAction="#openDataPath" text="%OpenDataPath" />
                                <MenuItem mnemonicParsing="false" onAction="#clearExpiredData" text="%ClearExpiredData" />
                                <MenuItem mnemonicParsing="false" onAction="#clearSettings" text="%ClearPersonalSettings" />
                                <MenuItem mnemonicParsing="false" onAction="#editConfigFile" text="%EditConfigFile" />
                            </items>
                        </Menu>
                        <Menu fx:id="recentMenu" mnemonicParsing="false" text="%RecentAccessed">
                            <items>
                                <SeparatorMenuItem mnemonicParsing="false" />
                            </items>
                        </Menu>
                        <Menu fx:id="devMenu" mnemonicParsing="false" text="%Development">
                            <items>
                                <!--<MenuItem mnemonicParsing="false" onAction="#DevTmp" text="DevTmp" />-->
                                <CheckMenuItem fx:id="monitorMemroyCheck" mnemonicParsing="false" onAction="#checkMemroyMonitor" text="%MonitorMemory" />
                                <CheckMenuItem fx:id="monitorCpuCheck" mnemonicParsing="false" onAction="#checkCpuMonitor" text="%MonitorCpu" />
                                <CheckMenuItem fx:id="detailedDebugCheck" mnemonicParsing="false" onAction="#detailedDebug" text="%DetailedDebugLogs" />
                                <CheckMenuItem fx:id="popErrorCheck" mnemonicParsing="false" onAction="#popError" text="%PopErrorLogs" />
                                <SeparatorMenuItem mnemonicParsing="false" />
                                <MenuItem mnemonicParsing="false" onAction="#MyBoxProperties" text="%MyBoxProperties" />
                                <MenuItem mnemonicParsing="false" onAction="#MyBoxLogs" text="%MyBoxLogs" />
                                <SeparatorMenuItem mnemonicParsing="false" />
                                <MenuItem mnemonicParsing="false" onAction="#runSystemCommand" text="%RunSystemCommand" />
                                <Menu mnemonicParsing="false" text="%JdkTools">
                                    <items>
                                        <MenuItem mnemonicParsing="false" onAction="#JConsole" text="%JConsole" />
                                        <!--<MenuItem mnemonicParsing="false" onAction="#JRunscript" text="%JRunscript" />-->
                                    </items>
                                </Menu>
                                <SeparatorMenuItem mnemonicParsing="false" />
                                <MenuItem mnemonicParsing="false" onAction="#macroCommand" text="%MacroCommands" />
                                <MenuItem mnemonicParsing="false" onAction="#MyBoxTables" text="%MyBoxTables" />
                                <MenuItem mnemonicParsing="false" onAction="#openManageLanguages" text="%ManageLanguages" />
                                <MenuItem mnemonicParsing="false" onAction="#makeIcons" text="%MakeIcons" />
                                <MenuItem mnemonicParsing="false" onAction="#makeDocuments" text="%MakeDocuments" />
                                <MenuItem mnemonicParsing="false" onAction="#autoTesting" text="%AutoTesting" />
                                <MenuItem mnemonicParsing="false" onAction="#allTableNames" text="%AllTableNames" />
                                <MenuItem mnemonicParsing="false" onAction="#myBoxBaseVerificationList" text="%MyBoxBaseVerificationList" />
                                <!--                                <SeparatorMenuItem mnemonicParsing="false" />
                                <MenuItem mnemonicParsing="false" onAction="#messageAuthor" text="%MessageAuthor" />-->
                            </items>
                        </Menu>
                        <Menu fx:id="helpMenu" mnemonicParsing="false" text="%Help"/>
                    </menus>
                </MenuBar>
            </children>
        </HBox>
    </children>
</VBox>
