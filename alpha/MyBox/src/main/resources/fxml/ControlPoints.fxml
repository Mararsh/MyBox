<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="thisPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="2.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.ControlPoints">
    <children>
      <FlowPane fx:id="buttonsPane" alignment="CENTER_LEFT" hgap="2.0" prefWrapLength="200.0" vgap="2.0">
         <children>
            <Button fx:id="moveUpButton" mnemonicParsing="false" onAction="#moveUpAction">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../buttons/Red/iconUp.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="moveDownButton" mnemonicParsing="false" onAction="#moveDownAction">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../buttons/Red/iconDown.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="moveTopButton" layoutX="336.0" layoutY="10.0" mnemonicParsing="false" onAction="#moveTopAction">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../buttons/Red/iconDoubleUp.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Label fx:id="titleLabel" minHeight="-Infinity" wrapText="true" />
            <Button fx:id="clearDataButton" mnemonicParsing="false" onAction="#clearAction">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../buttons/Red/iconClear.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="deleteDataButton" mnemonicParsing="false" onAction="#deleteAction">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../buttons/Red/iconDelete.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="addDataButton" mnemonicParsing="false" onAction="#addAction">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../buttons/Red/iconAdd.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <CheckBox fx:id="lostFocusCommitCheck" mnemonicParsing="false" onAction="#autoCommitCheck">
               <graphic>
                  <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../buttons/red/iconInput.png" />
                     </image>
                  </ImageView>
               </graphic>
            </CheckBox>
         </children>
      </FlowPane>
      <TableView fx:id="tableView" editable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="indexColumn" editable="false" text="%Index" />
            <TableColumn prefWidth="160.0" text="x" fx:id="xColumn" />
            <TableColumn fx:id="yColumn" prefWidth="160.0" text="y" />
         </columns>
      </TableView>
    </children>
</VBox>
