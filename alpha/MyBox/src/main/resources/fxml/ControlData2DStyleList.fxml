<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="thisPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="2.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.ControlData2DStyleList">
    <children>
              <HBox alignment="CENTER_RIGHT" spacing="2.0">
                  <children>
                      <FlowPane fx:id="buttonsPane" hgap="2.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" vgap="2.0" HBox.hgrow="ALWAYS">
                          <children>
                              <Button fx:id="clearButton" mnemonicParsing="false" onAction="#clearAction">
                                  <graphic>
                                      <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                          <image>
                                              <Image url="@../buttons/Red/iconClear.png" />
                                          </image>
                                      </ImageView>
                                  </graphic>
                              </Button>
                              <Button fx:id="deleteButton" disable="true" mnemonicParsing="false" onAction="#deleteAction">
                                  <graphic>
                                      <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                          <image>
                                              <Image url="@../buttons/Red/iconDelete.png" />
                                          </image>
                                      </ImageView>
                                  </graphic>
                              </Button>
                          </children>
                      </FlowPane>
            <ImageView fx:id="rightPaneControl" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../buttons/Red/iconDoubleRight.png" />
               </image>
            </ImageView>
                  </children>
              </HBox>
              <TableView fx:id="tableView" editable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                  <columns>
                      <TableColumn fx:id="rowsSelectionColumn" maxWidth="1.7976931348623157E308" prefWidth="-1.0">
                          <graphic>
                              <CheckBox fx:id="allRowsCheck" mnemonicParsing="false" text="%TableRow" />
                          </graphic>
                      </TableColumn>
                      <TableColumn fx:id="sidColumn" prefWidth="60.0" text="%ID" />
                      <TableColumn fx:id="sequenceColumn" prefWidth="50.0" text="%Sequence" />
            <TableColumn fx:id="abnormalColumn" prefWidth="50.0" text="%AbnormalValues" />
                      <TableColumn fx:id="fromColumn" prefWidth="60.0" text="%From" />
                      <TableColumn fx:id="toColumn" prefWidth="70.0" text="%To" />
                      <TableColumn fx:id="columnsColumn" prefWidth="120.0" text="%Columns" />
                      <TableColumn fx:id="rowFilterColumn" prefWidth="160.0" text="%RowFilter" />
                      <TableColumn fx:id="columnFilterColumn" prefWidth="160.0" text="%ColumnFilter" />
                      <TableColumn fx:id="fontColorColumn" text="%FontColor" />
                      <TableColumn fx:id="bgColorColumn" text="%BackgroundColor" />
                      <TableColumn fx:id="fontSizeColumn" text="%FontSize" />
                      <TableColumn fx:id="boldColumn" text="%Bold" />
                      <TableColumn fx:id="moreColumn" prefWidth="160.0" text="%More" />
                  </columns>
              </TableView>
              <FlowPane fx:id="paginationPane" hgap="2.0" vgap="2.0">
                  <children>
                      <Label text="%Page" />
                      <ComboBox fx:id="pageSelector" editable="true" prefWidth="80.0" />
                      <Label fx:id="pageLabel" />
                      <Button fx:id="goPageButton" mnemonicParsing="false" onAction="#goPage">
                          <graphic>
                              <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                  <image>
                                      <Image url="@../buttons/Red/iconGo.png" />
                                  </image> 
                              </ImageView>
                          </graphic>
                      </Button>
                      <Button fx:id="pagePreviousButton" mnemonicParsing="false" onAction="#pagePreviousAction">
                          <graphic>
                              <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                  <image>
                                      <Image url="@../buttons/Red/iconPrevious.png" />
                                  </image>
                              </ImageView>
                          </graphic>
                      </Button>
                      <Button fx:id="pageNextButton" mnemonicParsing="false" onAction="#pageNextAction">
                          <graphic>
                              <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                  <image>
                                      <Image url="@../buttons/Red/iconNext.png" />
                                  </image>
                              </ImageView>
                          </graphic>
                      </Button>
                      <Button fx:id="pageFirstButton" mnemonicParsing="false" onAction="#pageFirstAction">
                          <graphic>
                              <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                  <image>
                                      <Image url="@../buttons/Red/iconFirst.png" />
                                  </image>
                              </ImageView>
                          </graphic>
                      </Button>
                      <Button fx:id="pageLastButton" mnemonicParsing="false" onAction="#pageLastAction">
                          <graphic>
                              <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                  <image>
                                      <Image url="@../buttons/Red/iconLast.png" />
                                  </image>
                              </ImageView>
                          </graphic>
                      </Button>
                      <Label text="%PageSize" />
                      <ComboBox fx:id="pageSizeSelector" editable="true" prefWidth="80.0" />
                      <Label fx:id="dataSizeLabel" minHeight="-Infinity" wrapText="true" />
                      <Label fx:id="selectedLabel" minHeight="-Infinity" wrapText="true" />
                  </children>
              </FlowPane>
    </children>
</VBox>
