<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="thisPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="600.0" spacing="2.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.ControlData2DMatrix">
   <children>
      <VBox fx:id="mainAreaBox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="2.0">
         <children>
            <HBox fx:id="buttonsBox" alignment="CENTER_LEFT" spacing="2.0">
               <children>
                  <Button fx:id="selectButton" mnemonicParsing="false" onAction="#selectAction">
                     <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../buttons/Red/iconSelect.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="loadContentInSystemClipboard2Button" mnemonicParsing="false" onAction="#loadContentInSystemClipboard">
                     <graphic>
                        <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../buttons/iconImageSystem.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <RadioButton fx:id="htmlRadio" mnemonicParsing="false" selected="true">
                     <graphic>
                        <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../buttons/Red/iconHtml.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <toggleGroup>
                        <ToggleGroup fx:id="formatGroup" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="codesRaido" mnemonicParsing="false" toggleGroup="$formatGroup">
                     <graphic>
                        <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../buttons/Red/iconGrid.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </RadioButton>
                  <RadioButton fx:id="textsRadio" mnemonicParsing="false" toggleGroup="$formatGroup">
                     <graphic>
                        <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../buttons/Red/iconTxt.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </RadioButton>
                  <FlowPane fx:id="buttonsPane" alignment="CENTER_RIGHT" hgap="2.0" maxWidth="1.7976931348623157E308" prefWrapLength="0.0" vgap="2.0" HBox.hgrow="ALWAYS">
                     <children>
                        <CheckBox fx:id="wrapCheck" mnemonicParsing="false">
                           <graphic>
                              <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../buttons/Red/iconWrap.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </CheckBox>
                        <Button fx:id="editButton" mnemonicParsing="false" onAction="#editAction">
                           <graphic>
                              <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../buttons/Red/iconEdit.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Button fx:id="menuButton" mnemonicParsing="false" onAction="#menuAction">
                           <graphic>
                              <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../buttons/Red/iconMenu.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Button fx:id="viewButton" mnemonicParsing="false" onAction="#showViewMenu" onMouseEntered="#popViewMenu">
                           <graphic>
                              <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../buttons/Red/iconView.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Button fx:id="optionsButton" mnemonicParsing="false" onAction="#options">
                           <graphic>
                              <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../buttons/Red/iconOptions.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Button fx:id="delimiterButton" mnemonicParsing="false" onAction="#delimiterActon">
                           <graphic>
                              <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../buttons/Red/iconDelimiter.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                     </children>
                  </FlowPane>
                  <Button fx:id="dataManufactureButton" mnemonicParsing="false" onAction="#dataManufacture">
                     <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../buttons/Red/iconData.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </HBox>
            <VBox fx:id="dataBox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
      <FlowPane fx:id="paginationPane" alignment="CENTER_RIGHT" hgap="2.0" prefWrapLength="0.0" vgap="2.0">
         <children>
            <Label fx:id="selectedLabel" minHeight="-Infinity" wrapText="true">
               <FlowPane.margin>
                  <Insets right="20.0" />
               </FlowPane.margin>
            </Label>
            <Label fx:id="dataSizeLabel" minHeight="-Infinity" wrapText="true">
               <FlowPane.margin>
                  <Insets right="20.0" />
               </FlowPane.margin>
            </Label>
            <Label text="%PageSize" />
            <ComboBox fx:id="pageSizeSelector" editable="true" prefWidth="80.0" />
            <Label text="%Page" />
            <ComboBox fx:id="pageSelector" editable="true" prefWidth="80.0" />
            <Label fx:id="pageLabel" />
            <Button fx:id="goPageButton" mnemonicParsing="false" onAction="#goPage">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../buttons/Red/iconGo.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="pageFirstButton" mnemonicParsing="false" onAction="#pageFirstAction">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../buttons/Red/iconFirst.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="pageLastButton" mnemonicParsing="false" onAction="#pageLastAction">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../buttons/Red/iconLast.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="pagePreviousButton" mnemonicParsing="false" onAction="#pagePreviousAction">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../buttons/Red/iconPrevious.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="pageNextButton" mnemonicParsing="false" onAction="#pageNextAction">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../buttons/Red/iconNext.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </FlowPane>
      <TabPane tabClosingPolicy="UNAVAILABLE">
         <tabs>
            <Tab text="table">
               <content>
                  <VBox fx:id="tableBox" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                     <children>
                        <TableView fx:id="tableView" editable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="rowsSelectionColumn" maxWidth="1.7976931348623157E308" prefWidth="-1.0">
                                 <graphic>
                                    <CheckBox fx:id="allRowsCheck" mnemonicParsing="false" text="%TableRow" />
                                 </graphic>
                              </TableColumn>
                              <TableColumn fx:id="dataRowColumn" editable="false" maxWidth="1.7976931348623157E308" prefWidth="-1.0" text="%DataRow" />
                           </columns>
                        </TableView>
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab text="html">
               <content>
                  <VBox fx:id="htmlBox">
                     <children>
                        <fx:include fx:id="webView" source="ControlWebView.fxml" />
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab text="texts">
               <content>
                  <TextArea fx:id="textsArea" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" promptText="%DataInputComments" />
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </children>
</VBox>
