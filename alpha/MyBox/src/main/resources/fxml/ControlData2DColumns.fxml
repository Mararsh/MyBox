<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="thisPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="2.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mara.mybox.controller.ControlData2DColumns">
    <children>
      <FlowPane alignment="CENTER_RIGHT" hgap="2.0" vgap="2.0">
         <children>
            <Button fx:id="dataButton" layoutX="535.0" layoutY="10.0" mnemonicParsing="false" onAction="#dataAction">
               <graphic>
                  <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../buttons/Red/iconData.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelAction">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../buttons/Red/iconCancel.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
                <Button fx:id="trimColumnsButton" mnemonicParsing="false" onAction="#trimAction">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../buttons/Red/iconNumber.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="deleteButton" disable="true" mnemonicParsing="false" onAction="#deleteRowsAction">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../buttons/Red/iconDelete.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="moveUpButton" mnemonicParsing="false" onAction="#moveUpAction">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../buttons/Red/iconUp.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="moveDownButton" mnemonicParsing="false" onAction="#moveDownAction">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../buttons/Red/iconDown.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="addButton" mnemonicParsing="false" onAction="#addRowsAction">
                    <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../buttons/Red/iconAdd.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            <Button fx:id="okButton" mnemonicParsing="false" onAction="#okAction">
               <graphic>
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../buttons/Red/iconOK.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </FlowPane>
        <TableView fx:id="tableView" editable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" tableMenuButtonVisible="true" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="rowsSelectionColumn" maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="-1.0">
                    <graphic>
                        <CheckBox fx:id="allRowsCheck" mnemonicParsing="false" text="%TableRow" />
                    </graphic>
                </TableColumn>
                <TableColumn fx:id="indexColumn" editable="false" prefWidth="60.0" text="%Index" />
                <TableColumn fx:id="nameColumn" prefWidth="160.0" text="%ColumnName" />
                <TableColumn fx:id="typeColumn" prefWidth="120.0" text="%Type" />
                <TableColumn fx:id="editableColumn" text="%Editable" />
                <TableColumn fx:id="notNullColumn" text="%NotNull" />
                <TableColumn fx:id="lengthColumn" prefWidth="75.0" text="%Length" />
                <TableColumn fx:id="widthColumn" prefWidth="75.0" text="%Width" />
            </columns>
        </TableView>
    </children>
</VBox>
